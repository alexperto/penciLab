.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'PenciLab', root_path, :class => :brand
      %ul.nav.pull-right
        - unless user_signed_in?
          %li{ :class => ( 'active' if current_page? new_user_session_path ) }= link_to 'Sign In', new_user_session_path
          %li.divider-vertical
          %li{ :class => ( 'active' if current_page? new_user_registration_path) }= link_to 'Sign Up', new_user_registration_path
        - else
          %li.dropdown
            = link_to '#', :class => 'dropdown-toggle', :data => { :toggle => :dropdown } do
              %i.icon-user.icon-white
              = User.model_name.human
              %b.caret

            %ul.dropdown-menu
              %li= link_to 'Edit profile', edit_user_registration_path
              %li= link_to 'Sing out', destroy_user_session_path, :data => { :method => :delete }
